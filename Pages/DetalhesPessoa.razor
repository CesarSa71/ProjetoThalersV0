                            <div class="detail-label">Faixa de Patrimônio</div>
                            <div class="detail-value">@(pessoa.FaixaPatrimonio ?? "-")</div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private Pessoa? pessoa;
    private bool isLoading = true;
    private string? mensagemErro;
    private string? detalhesErro;

    protected override async Task OnInitializedAsync()
    {
        await CarregarPessoa();
    }

    private async Task CarregarPessoa()
    {
        try
        {
            isLoading = true;
            mensagemErro = null;
            detalhesErro = null;
            StateHasChanged();

            Logger.LogInformation($"Carregando pessoa com ID: {Id}");

            // Criar contexto usando factory (melhor para Blazor Server)
            using var dbContext = await DbContextFactory.CreateDbContextAsync();

            // Verificar conexão com o banco
            if (!await dbContext.Database.CanConnectAsync())
            {
                mensagemErro = "Não foi possível conectar ao banco de dados.";
                detalhesErro = "Verifique se o PostgreSQL está rodando e se a string de conexão está correta.";
                Logger.LogError("Não foi possível conectar ao banco de dados");
                return;
            }

            // Buscar pessoa pelo ID
            pessoa = await dbContext.Pessoas
                .FirstOrDefaultAsync(p => p.Id == Id);

            if (pessoa == null)
            {
                Logger.LogWarning($"Pessoa com ID {Id} não encontrada");
                mensagemErro = $"Pessoa com ID {Id} não foi encontrada no banco de dados.";
            }
            else
            {
                Logger.LogInformation($"Pessoa carregada: {pessoa.Nome}");
            }
        }
        catch (Exception ex)
        {
            mensagemErro = $"Erro ao carregar pessoa: {ex.Message}";
            detalhesErro = ex.InnerException?.Message ?? ex.StackTrace;
            Logger.LogError(ex, "Erro ao carregar pessoa");
            pessoa = null;
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }
}

