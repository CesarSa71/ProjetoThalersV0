                            <div class="detail-value">@(pessoa.Email ?? "-")</div>
                        </div>

                        <div class="detail-card">
                            <div class="detail-label">Celular</div>
                            <div class="detail-value">@(pessoa.Celular ?? "-")</div>
                        </div>

                        <div class="detail-card">
                            <div class="detail-label">Telefone</div>
                            <div class="detail-value">@(pessoa.Telefone ?? "-")</div>
                        </div>

                        <div class="detail-card">
                            <div class="detail-label">Endereço</div>
                            <div class="detail-value">@(pessoa.Endereco ?? "-")</div>
                        </div>

                        <div class="detail-card">
                            <div class="detail-label">Número</div>
                            <div class="detail-value">@(pessoa.Numero ?? "-")</div>
                        </div>

                        <div class="detail-card">
                            <div class="detail-label">Complemento</div>
                            <div class="detail-value">@(pessoa.Complemento ?? "-")</div>
                        </div>

                        <div class="detail-card">
                            <div class="detail-label">Bairro</div>
                            <div class="detail-value">@(pessoa.Bairro ?? "-")</div>
                        </div>

                        <div class="detail-card">
                            <div class="detail-label">Cidade</div>
                            <div class="detail-value">@(pessoa.Cidade ?? "-")</div>
                        </div>

                        <div class="detail-card">
                            <div class="detail-label">Estado</div>
                            <div class="detail-value">@(pessoa.Estado ?? "-")</div>
                        </div>

                        <div class="detail-card">
                            <div class="detail-label">CEP</div>
                            <div class="detail-value">@(pessoa.Cep ?? "-")</div>
                        </div>

                        <div class="detail-card">
                            <div class="detail-label">Ramo de Atividade</div>
                            <div class="detail-value">@(pessoa.RamoAtividade ?? "-")</div>
                        </div>

                        <div class="detail-card">
                            <div class="detail-label">CPF Agente Comercial</div>
                            <div class="detail-value">@(pessoa.CpfAgenteComercial ?? "-")</div>
                        </div>

                        <div class="detail-card">
                            <div class="detail-label">Nome Agente Comercial</div>
                            <div class="detail-value">@(pessoa.NomeAgenteComercial ?? "-")</div>
                        </div>

                        <div class="detail-card">
                            <div class="detail-label">Faixa de Renda</div>
                            <div class="detail-value">@(pessoa.FaixaRenda ?? "-")</div>
                        </div>

                        <div class="detail-card">
                            <div class="detail-label">Origem da Renda</div>
                            <div class="detail-value">@(pessoa.OrigemRenda ?? "-")</div>
                        </div>

                        <div class="detail-card">
                            <div class="detail-label">Comentário Origem Renda</div>
                            <div class="detail-value">@(pessoa.ComentarioOrigemRenda ?? "-")</div>
                        </div>

